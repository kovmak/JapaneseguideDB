<AnchorPane prefHeight="328.0" prefWidth="456.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.krnelx.presentation.controller.AddNewElementsController">
    <VBox alignment="CENTER" prefHeight="138.0" prefWidth="505.0" spacing="10.0">
